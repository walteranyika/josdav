<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:weightSum="1">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/cage_size"
        android:hint="cage size"

        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/fish_type"
        android:layout_alignEnd="@+id/fish_type"
        android:layout_marginTop="35dp" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/cage_stock"
        android:hint="pond_stock"
        android:layout_below="@+id/cage_size"
        android:layout_alignLeft="@+id/cage_size"
        android:layout_alignStart="@+id/cage_size"
    />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/fish_size"
        android:hint="fish size"

        android:layout_below="@+id/cage_stock"
        android:layout_alignLeft="@+id/cage_stock"
        android:layout_alignStart="@+id/cage_stock" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/fish_type"
        android:hint="fish type"

        android:layout_below="@+id/fish_size"
        android:layout_toLeftOf="@+id/fab_submit_post"
        android:layout_toStartOf="@+id/fab_submit_post" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/location"
        android:hint="location"
        android:layout_gravity="right"
        android:layout_below="@+id/fish_type"
        android:layout_alignLeft="@+id/fish_type"
        android:layout_alignStart="@+id/fish_type" />




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_post"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigation_check_24"
        android:layout_weight="0.05"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <EditText
        android:id="@+id/cage_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Cage Ref"
        android:inputType="textEmailAddress"
        android:layout_alignRight="@+id/cage_size"
        android:layout_alignEnd="@+id/cage_size"
        android:layout_alignLeft="@+id/cage_size"
        android:layout_alignStart="@+id/cage_size" />


</RelativeLayout>

