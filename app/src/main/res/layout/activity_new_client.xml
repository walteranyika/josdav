<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:weightSum="1">

    <EditText
        android:id="@+id/country"
        android:layout_width="200dp"

        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address"
        android:ems="10"
        android:hint="Country" />

    <EditText
        android:id="@+id/zipcode"
        android:layout_width="200dp"

        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="Zip Code"
        android:layout_below="@+id/country"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/bill"
        android:layout_width="200dp"

        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fish_type"
        android:layout_alignParentTop="true"

        android:layout_alignRight="@+id/fish_type"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Bill To" />

    <EditText
        android:id="@+id/address"
        android:layout_width="200dp"

        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="Address"
        android:layout_below="@+id/bill"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_s"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigation_check_24"
        android:layout_weight="0.05"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp" />

    <EditText
        android:id="@+id/client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pond_size"
        android:layout_alignLeft="@+id/pond_size"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/pond_size"
        android:layout_alignStart="@+id/pond_size"
        android:ems="10"
        android:hint="Clients Company Name"
        android:inputType="textEmailAddress" />


</RelativeLayout>

