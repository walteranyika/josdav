<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:elevation="12dp"
    android:orientation="vertical"
    android:padding="9dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="9dp"
        android:theme="@style/AlertDialog.AppCompat.Light">

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="day"
            android:layout_below="@+id/month"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/messageTime"
            android:layout_alignStart="@+id/messageTime" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/feed_quantity"
            android:layout_alignRight="@+id/feed_quantity"
            android:layout_below="@+id/textView15"
            tools:text="temp"
            android:layout_toRightOf="@+id/textView15"
            android:layout_toEndOf="@+id/textView15" />

        <TextView
            android:id="@+id/mortality"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/temperature"
            android:layout_toEndOf="@+id/textView15"
            android:layout_toRightOf="@+id/textView15"

            android:hint="mortality"
            android:maxLines="1" />

        <TextView
            android:id="@+id/feed_quantity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            tools:text=" quantity"
            android:layout_below="@+id/feed_type"
            android:layout_toRightOf="@+id/textView15"
            android:layout_toEndOf="@+id/textView15" />

        <TextView
            android:id="@+id/feed_type"
            android:layout_width="80dp"
            android:layout_height="wrap_content"


            android:layout_toEndOf="@+id/textView15"
            android:layout_toLeftOf="@+id/genre"
            tools:text="feed_type"
            android:layout_toRightOf="@+id/textView15" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/month"
            android:layout_toStartOf="@+id/month"
            android:text="day"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/year"
            android:layout_toStartOf="@+id/year"
            android:text="month"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="year"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Feed Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Feed Quantity"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:ignore="HardcodedText"
            android:layout_alignBaseline="@+id/feed_quantity"
            android:layout_alignBottom="@+id/feed_quantity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView15"
            android:text="Temperature"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView16"
            android:text="Mortality"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView17"
            android:text="Mood"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/mood"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mortality"

            android:layout_alignStart="@+id/mortality"
            android:layout_below="@+id/mortality"
            android:text="mood" />

        <TextView
            android:id="@+id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/year"
            android:layout_toStartOf="@+id/year"
            android:text="TextView"
            android:layout_below="@+id/genre" />

        <TextView
            android:id="@+id/pond_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mood"
            android:layout_alignEnd="@+id/messageTime"
            android:layout_alignRight="@+id/messageTime"
            android:text="TextView" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
